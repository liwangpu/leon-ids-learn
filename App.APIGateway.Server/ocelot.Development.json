{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/ids/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Options", "Patch" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ]
    },
    {
      "DownstreamPathTemplate": "/oms/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/oms/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post", "Put", "Delete", "Options", "Patch" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "192.168.99.100",
          "Port": 5001
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotClient",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/sms/user",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/sms/user",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotClient",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "user.action": "query"
      },
      "AddHeadersToRequest": {
        "UserId": "Claims[UserId] > value[0] > |",
        "TenantId": "Claims[TenantId] > value[0] > |"
      }
    },
    {
      "DownstreamPathTemplate": "/sms/user",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/sms/user",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "OcelotClient",
        "AllowedScopes": []
      },
      "RouteClaimsRequirement": {
        "user.action": "create"
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:6000"
  }
}